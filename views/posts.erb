<%= easy_partial 'header' %>

<%= easy_partial 'subhead' %>

  <div id="main" class="posts">
    <ul>
      <% @posts.each do |post| %> 
       <li class="post">
        <h3>I got:</h3> 
        <div class="mine"><%=  post.i_got%> </div>
        <h3>U got:</h3>  
        <div class="yours"><%=  post.u_got%> </div>
        <a href="/post/<%= post.id %>">more</a>
        <div id="tags">
          <h4>Tags:</h4>
          <ul>
          <% post.tags.each do |tag| %>
            <li><%= tag.name %> |x|</li>
          <%end%>

          </ul>
        </div> 

       </li>
      <% end %>  
    </ul>
  </div>
  
<%= easy_partial 'footer' %>